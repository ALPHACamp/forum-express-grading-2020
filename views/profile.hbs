<div class=" row border mt-5">
  <div class="col-md-4">
    <img class="card-img rounded-circle img-fluid" alt="avatar" src="{{#if profile.image}}{{profile.image}}{{else}}https://loremflickr.com/cache/resized/defaultImage.small_320_240_nofilter.jpg{{/if}}">
  </div>
  <div class="col-md-8">
    <div class="card-body">
      <h4 class="card-title">{{profile.name}}</h4>
      <p class="card-text">{{profile.email}}</p>
      <p class="card-text"><span><b>{{totalComment}}</b></span> 已發布的評論</p>
      {{#ifUser profile.id user.id}}
      <a href="/users/{{profile.id}}/edit" class="btn btn-primary">edit</a>
      {{/ifUser}}
    </div>
  </div>
</div>
<div class="card">
  <div class="card-header">
    <span><b>{{differentRest}}</b></span> 已評論的餐廳
  </div>
  <div class="card-img m-3">
    <div class="row d-flex flex-wrap justify-content-start">
      {{#each comments}}
      <div class="col-md-1">
        <a href="/restaurants/{{this.RestaurantId}}">
          <img class="card-img-top " src="{{this.restaurantImg}}" alt="Card image cap" width="50px" height="50px">
        </a>
      </div>
      {{/each}}
    </div>
  </div>
</div>