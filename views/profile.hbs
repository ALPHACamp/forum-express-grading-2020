<div class="row">
  <div class="col-md-4">
    <img class="img-responsive center-block" src="{{user.image}}" alt="" style="width: 250px;margin-bottom: 25px;">
  </div>
  <div class="col-md-8">
    <div class="well">
      <ul class="list-unstyled">
        <li><strong>Name:</strong> {{user.name}}</li>
        <li><strong>Email:</strong> {{user.email}}</li>
      </ul>
    </div>
    {{#ifEqual User.id user.id}}
      <a href="/users/{{user.id}}/edit" class="btn btn-primary">Edit</a>
    {{/ifEqual}}
  </div>
</div>