<div class="card mb-3 container">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img class="img-responsive center-block" src="{{user.image}}" style="width: 300px;margin: 25px;">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{user.name}}</h5>
        <p class="card-text"><small>{{user.email}}</small></p>
        <a class="btn btn-primary" href="/users/{{user.id}}/edit" role="button">Edit</a>
      </div>
    </div>
  </div>
</div>