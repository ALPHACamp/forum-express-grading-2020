<div class="row">
  <div class="col-12 mb-3">
    <h1>{{restaurant.name}}</h1>
    <p>[{{restaurant.categoryName}}]</p>
  </div>
  <div class="col-12 mb-3">
    <ul>
      <li>評論次數：{{restaurant.commentCount}}</li>
      <li>瀏覽次數：{{restaurant.viewCounts}}</li>
      <li>收藏次數：{{restaurant.favoritedUserCount}}</li>
    </ul>
  </div>

  <div class="col-12 mb-3">
    <div class="card">
      <div class="card-header">
        <strong>{{restaurant.favoritedUserCount}}</strong> 收藏者
      </div>
      <div class="card-body">
        {{#each restaurant.favoritedUser}}
        <a href="/users/{{this.id}}">
          <img class="img-responsive center-block mb-3 mr-3" src="{{this.image}}" alt="following avatar"
            style="height: 100px;">
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>

