<h1>餐廳後台</h1>

<div>
  <a href='/admin/restaurants'>Restaurants</a> |
  <a href="/admin/users">Users</a> |
  <a href="/admin/categories">Categories</a>
</div>

<br />
<br />

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="co1">Email</th>
      <th scope="col">Role</th>
      <th scope="co1">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>{{this.email}}</td>
      <td>
        {{#if this.isAdmin}}
        admin
        {{else}}
        user
        {{/if}}
      </td>
      <td>
        {{#if this.isAdmin}}
        <form action="/admin/users/{{this.id}}/toggleAdmin?_method=PUT" method="POST" style="display: inline-block;">
          <button type="submit" class="btn btn-dark">set as user</button>
        </form>
        {{else}}
        <form action="/admin/users/{{this.id}}/toggleAdmin?_method=PUT" method="POST" style="display: inline-block;">
          <button type="submit" class="btn btn-dark">set as admin</button>
        </form>
        {{/if}}
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>