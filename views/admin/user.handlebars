<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{user.image}}" alt="user-image" style="max-width: 200px;">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{user.name}}</h5>
        <p class="card-text">{{user.email}}</p>
        <p class="card-text">{{totalComments}}已評論餐廳</p>
        <p class="card-text">{{totalFavoritedRestaurants}}已收藏餐廳</p>
        <p class="card-text">{{totalFollowings}}followings(已追蹤人數)</p>
        <p class="card-text">{{totalFollowers}}followers(被追蹤人數)</p>
        <a href="/users/{{user.id}}/edit" class="btn btn-primary">Edit</a>
      </div>
    </div>
  </div>
</div>
<br />
<br />
<div class="d-flex justify-content">
  <div class="card mr-2">
    <h5 class="card-header">{{totalFollowings}}followings(追蹤者)</h5>
    <div class="card-body d-flex flex-wrap">
      {{#each user.Followings}}
      <a href="../users/{{this.id}}">
        <img src="{{this.image}}" alt="..." class="card-img-top m-2" style="width:100px;"></a>
      {{/each}}
    </div>
  </div>
  <div class="card">
    <h5 class="card-header">{{totalComments}}已評論餐廳</h5>
    <div class="card-body d-flex flex-wrap">
      {{#each userComments}}
      <a href="../restaurants/{{this.RestaurantId}}">
        <img src="{{this.restaurantImage}}" class="card-img-top m-2" style="width:100px;"></a>
      {{/each}}
    </div>
  </div>
</div>
<div class="d-flex justify-content">
  <div class="card mr-2">
    <h5 class="card-header">{{totalFollowers}}followers(追隨者)</h5>
    <div class="card-body d-flex flex-wrap">
      {{#each user.Followers}}
      <a href="../users/{{this.id}}">
        <img src="{{this.image}}" alt="..." class="card-img-top m-2" style="width:100px;"></a>
      {{/each}}
    </div>
  </div>
  <div class="card">
    <h5 class="card-header">{{totalFavoritedRestaurants}}已收藏餐廳</h5>
    <div class="card-body d-flex flex-wrap">
      {{#each user.FavoritedRestaurants}}
      <a href="../restaurants/{{this.id}}">
        <img src="{{this.image}}" class="card-img-top m-2" style="width:100px;"></a>
      {{/each}}
    </div>
  </div>
</div>