<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      {{#if user.image}}
      <img src="{{user.image}}" class="img-thumbnail" alt="...">
      {{else}}
      <img src="..." class="img-thumbnail" alt=".123">
      {{/if}}
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{user.name}}</h5>
        <p class="card-text">{{user.email}}</p>
        <p class="card-text">{{totalComments}}已評論餐廳</p>
        <a href="/users/{{user.id}}/edit" class="btn btn-primary">Edit</a>
      </div>
    </div>
  </div>
</div>
<br />
<br />


<div class="card">
  <h5 class="card-header">{{totalComments}}已評論餐廳</h5>
  <div class="card-body d-flex">
    {{#each userComments}}
    <a href="../restaurants/{{this.RestaurantId}}">
      <img src="{{this.restaurantImage}}" class="card-img-top mr-2" alt="..."></a>
    {{/each}}
  </div>
</div>