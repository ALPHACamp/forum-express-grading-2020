<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{user.image}}" alt="user-image" style="max-width: 200px;">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{user.name}}</h5>
        <p class="card-text">{{user.email}}</p>
        <p class="card-text"><strong>{{totalComments}}</strong> 已評論餐廳</p>
        <p class="card-text"><strong>{{totalFavoritedRestaurants}}</strong> 收藏的餐廳</p>
        <p class="card-text"><strong>{{totalFollowings}}</strong> followings</p>
        <p class="card-text"><strong>{{totalFollowers}}</strong> followers</p>
        <a href="/users/{{user.id}}/edit" class="btn btn-primary">Edit</a>
      </div>
    </div>
  </div>
</div>
<br />
<br />
<div class="d-flex justify-content">
  <div class="card mr-2">
    <div class="card-header"><strong>{{totalFollowings}}</strong> followings</div>
    <div class="card-body d-flex flex-wrap">
      {{#each user.Followings}}
      <a href="../users/{{this.id}}">
        <img src="{{this.image}}" alt="..." class="card-img-top m-2" style="width:100px;"></a>
      {{/each}}
    </div>
  </div>
  <div class="card">
    <div class="card-header"><strong>{{totalComments}}</strong> 已評論餐廳</div>
    <div class="card-body d-flex flex-wrap">
      {{#each userComments}}
      <a href="../restaurants/{{this.RestaurantId}}">
        <img src="{{this.restaurantImage}}" class="card-img-top m-2" style="width:100px;"></a>
      {{/each}}
    </div>
  </div>
</div>
<div class="d-flex justify-content">
  <div class="card mr-2">
    <div class="card-header"><strong>{{totalFollowers}}</strong> followers</div>
    <div class="card-body d-flex flex-wrap">
      {{#each user.Followers}}
      <a href="../users/{{this.id}}">
        <img src="{{this.image}}" alt="..." class="card-img-top m-2" style="width:100px;"></a>
      {{/each}}
    </div>
  </div>
  <div class="card">
    <div class="card-header"><strong>{{totalFavoritedRestaurants}}</strong> 收藏的餐廳</div>
    <div class="card-body d-flex flex-wrap">
      {{#each user.FavoritedRestaurants}}
      <a href="../restaurants/{{this.id}}">
        <img src="{{this.image}}" class="card-img-top m-2" style="width:100px;"></a>
      {{/each}}
    </div>
  </div>
</div>