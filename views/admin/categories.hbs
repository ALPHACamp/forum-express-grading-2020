<h1>餐廳後台</h1>
<div class="mb-3">
  <a href="/admin/restaurants">Restaurants</a>
  |
  <a href="/admin/categories">Categories</a>
  |
  <a href="/admin/users">Users</a>
</div>

<div
  class="d-flex align-items-center pl-4 pt-4 mt-3 bg-transparent rounded shadow"
>
  {{#if category}}
    <form action="/admin/categories/{{category.id}}?_method=PUT" method="POST">
      <div class="form-group row">
        <label class="col-8" for="name">修改分類名稱
          <strong>#{{category.id}}</strong></label>
        <input
          type="text"
          placeholder="name"
          name="name"
          id="name"
          value="{{category.name}}"
          class="form-control col-8 mx-2"
        />
        <button class="btn btn-success col-2" type="submit">Update</button>
      </div>
      <a href="/admin/categories"> or Create New</a>
    </form>
  {{else}}
    <form action="/admin/categories" method="POST">
      <div class="form-group row">
        <label class="col-8" for="name">Add New Category</label>
        <input
          type="text"
          placeholder="name"
          name="name"
          id="name"
          class="form-control col-8 mx-2"
        />
        <button
          class="col-2 btn btn-outline-primary"
          type="submit"
        >Create</button>
      </div>
    </form>
  {{/if}}
</div>
<br />
<br />
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Category Name</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each categories}}
      <tr>
        <th scope="row">{{this.id}}</th>
        <td>{{this.name}}</td>
        <td>
          <button type="button" class="btn btn-link">
            <a href="/admin/categories/{{this.id}}">
              Edit
            </a>
          </button>
          <form
            action="/admin/categories/{{this.id}}?_method=DELETE"
            method="POST"
            style="display: inline;"
            onsubmit="return deleteConfirm();"
          >
            <button type="submit" class="btn btn-link">Delete</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
