<h1>餐廳後台</h1>
<p class="lead"><a href="/admin/restaurants">Restaurants</a> | <strong>Users</strong></p>

<br />
<br />

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>{{this.email}}</td>
      <td>{{#if isAdmin}}Admin{{else}}User{{/if}}</td>
      <td>
        <form action="/admin/users/{{this.id}}/toggleAdmin" method="PUT" style="display: inline;">
          <button type="submit" class="btn btn-link">
            {{#if isAdmin}}Set as User{{else}}Set as Admin{{/if}}
          </button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>