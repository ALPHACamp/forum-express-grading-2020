<h1>使用者列表</h1>

<a href='/admin/restaurants'>
  Restaurants
</a>
<span>|</span>
<a href='/admin/users'>
  Users
</a>

<br />
<br />

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>
        {{this.email}}
      </td>
      <td>
      {{#if this.isAdmin}}
      admin
      {{else}}
      user
      {{/if}}
      </td>
      <td>
        {{#if this.isAdmin}}
        <a href="/admin/users/{{this.id}}/toggleAdmin">set as user</a>
        {{else}}
        <a href="/admin/users/{{this.id}}/toggleAdmin">set as admin</a>
        {{/if}}
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>