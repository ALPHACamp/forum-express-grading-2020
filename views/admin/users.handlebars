<h1>餐廳後台</h1>
<div class="fz-20">
  <a href="/admin/restaurants" class="btn btn-link pl-0 fz-20">Restaurants</a> | <a href="/admin/users"
    class="btn btn-link fz-20">Users</a>
</div>

<br />
<br />

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>{{this.email}}</td>
      <td>{{isAdmin this.isAdmin}}</td>
      <td>
        <form action="/admin/users/{{this.id}}/toggleAdmin?_method=PUT" method="POST" style="display: inline;">
          {{#if this.isAdmin}}
          <button type="submit" class="btn btn-link">set as user</button>
          {{else}}
          <button type="submit" class="btn btn-link">set as admin</button>
          {{/if}}
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>