{{> message}}
{{#if restaurant}}
<form action="/admin/restaurants/{{restaurant.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
{{else}}
<form action="/admin/restaurants" method="POST" enctype="multipart/form-data">
{{/if}}
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" name="name" id="name" maxlength="12" placeholder="Enter name" {{#if restaurant}}value="{{restaurant.name}}"{{else}}value="{{name}}"{{/if}} required autofocus>
  </div>

  <div class="form-group">
    <label for="tel">Tel</label>
    <input type="tel" class="form-control" name="tel" id="tel" pattern="[0-9]{2,4}[ ]?[0-9]{3,4}[ ]?[0-9]{3,4}" minlength="10" maxlength="12" placeholder="ex: 02 6666 6666" {{#if restaurant}}value="{{restaurant.tel}}"{{else}}value="{{tel}}"{{/if}} required onchange="this.value = this.value.trim();">
  </div>

  <div class="form-group">
    <label for="address">Address</label>
    <input type="text" class="form-control" name="address" id="address" placeholder="Enter address" {{#if restaurant}}value="{{restaurant.address}}"{{else}}value="{{address}}"{{/if}} maxlength="50" required>
  </div>

  <div class="form-group">
    <label for="opening_hours">Opening Hours</label>
    <input type="time" class="form-control" name="opening_hours" id="opening_hours" placeholder="Enter opening_hours" {{#if restaurant}}value="{{restaurant.opening_hours}}"{{else}}value="{{opening_hours}}"{{/if}} required>
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <textarea class="form-control" id="description" name="description" rows="3" maxlength="500" required>{{#if restaurant}}{{restaurant.description}}{{else}}{{description}}{{/if}}</textarea>
  </div>

  <div class="form-group">
    <label for="image">Image</label>
    <input type="file" class="form-control-file" id="image" name="image">
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>