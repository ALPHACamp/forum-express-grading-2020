{{> message }}
<form action="/admin/restaurants/{{restaurant.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
  <div class="form-group row">
    <small class="col-auto"><span style="color: red;">*</span>必填欄位</small>
  </div>
  <div class="form-group">
    <label for="name">Name<span style="color: red; margin-left: 0.1em">*</span></label>
    <input type="text" class="form-control" name="name" id="name" placeholder="Enter name..."
      value="{{restaurant.name}}">
  </div>

  <div class="form-group">
    <label for="CategoryId">Category</label>
    <select class="form-control" id="CategoryId" name="CategoryId">
      {{#each categories}}
      <option value="{{this.id}}" {{#if (equal this.id ../restaurant.CategoryId)}}selected{{/if}}>{{this.name}}</option>
      {{/each}}
    </select>
  </div>

  <div class="form-group">
    <label for="tel">Tel<span style="color: red; margin-left: 0.1em">*</span></label>
    <input type="text" class="form-control" name="tel" id="tel" placeholder="Enter tel... Format: 0x-xxxx-xxxx"
      value="{{restaurant.tel}}">
  </div>

  <div class="form-group">
    <label for="address">Address<span style="color: red; margin-left: 0.1em">*</span></label>
    <input type="text" class="form-control" name="address" id="address" placeholder="Enter address..."
      value="{{restaurant.address}}">
  </div>

  <div class="form-group">
    <label for="opening_hours">Opening Hours<span style="color: red; margin-left: 0.1em">*</span></label>
    <input type="time" class="form-control" name="opening_hours" id="opening_hours" placeholder="Enter opening_hours"
      value="{{restaurant.opening_hours}}">
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <textarea class="form-control" id="description" name="description" rows="3">{{restaurant.description}}</textarea>
  </div>

  {{!-- image upload --}}
  <div class="form-group">
    <label for="image">Image</label>
    <input type="file" class="form-control-file" id="image" name="image">
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>