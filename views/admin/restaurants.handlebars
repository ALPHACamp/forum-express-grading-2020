<h1>餐廳後台</h1>

<div class="d-flex justify-content-between align-items-center">
  <div class="d-flex h5">
    <a href="/admin/restaurants" class="text-muted" style="text-decoration: none;">Restaurants</a>
    <div class="mx-2">|</div>
    <a href="/admin/users">Users</a>
  </div>

  <a href='/admin/restaurants/create'>
    <button type="button" class="btn btn-primary">New Restaurant</button>
  </a>
</div>

<br />

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each restaurants}}
      <tr>
        <th scope="row">{{this.id}}</th>
        <td>{{this.name}}</td>
        <td>
          <button type="button" class="btn btn-link">
            <a href="/admin/restaurants/{{this.id}}">
              Show
            </a>
          </button>
          <button type="button" class="btn btn-link">
            <a href="/admin/restaurants/{{this.id}}/edit">
              Edit
            </a>
          </button>
          <form action="/admin/restaurants/{{this.id}}?_method=DELETE" method="POST" style="display: inline;" onsubmit="return deleteAlert()">
            <button type="submit" class="btn btn-link">Delete</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>