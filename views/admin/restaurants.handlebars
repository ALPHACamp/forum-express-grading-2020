<h1>餐廳後台:餐廳管理</h1>

<div class="btn">
<a href='/admin/restaurants/create' class="mr-2">
  <button type="button" class="btn btn-primary">New Restaurant</button>
</a>
<a href="/admin/restaurants">Restaurants</a> | <a href="/admin/users">Users</a>
</div>
<br/>
<br/>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each restaurants}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>{{this.Category.name}}</td>
      <td>
        <button type="button" class="btn btn-link">
          <a href="/admin/restaurants/{{this.id}}">
          Show
          </a>
        </button>
        <button type="button" class="btn btn-link">
          <a href="/admin/restaurants/{{this.id}}/edit">
            Edit
          </a>
        </button>
    
        <button type="button" class="btn btn-link" >
          <a href="" data-toggle="modal" data-target="#modal-{{this.id}}">
            Delete
          </a>
        </button>

        <!-- Modal -->
        <div class="modal fade" id="modal-{{this.id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{this.name}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body text-center">
                確定要刪除【{{this.name}}】嗎?
              </div>
              <div class="modal-footer align-items-center">
                <button type="button" class="btn btn-secondary btn-sm " data-dismiss="modal">取消</button>
                <form
                  class="my-auto"
                  action="/admin/restaurants/{{this.id}}?_method=DELETE"
                  method="POST"
                  >
                  <button
                    type="submit"
                    class="btn btn-danger btn-sm mr-1"
                    >刪除
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>

      </td>
    </tr>
    {{/each}}
  </tbody>
</table>