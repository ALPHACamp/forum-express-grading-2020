<h1>人氣餐廳</h1>
<hr />
<br />
<div class="row">
  {{#each restaurants}}
  <div class="col-md-4">
    <div class="card mb-4 shadow-sm">
      <img class="card-img-top" src="{{this.image}}" alt="Card image cap" width="286px" height="180px">
      <div class="card-body">
        <p class="card-text">
          <a href="/restaurants/{{this.id}}">
            {{this.name}}
          </a>
        </p>
        <span class="badge badge-secondary">收藏人數：{{this.FavoriteCount}}</span>
        <p class="card-text">{{this.description}}</p>
        <div class="d-inline">
          {{#if this.isFavorited}}
          <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger">移除最愛</button>
          </form>
          {{else}}
          <form action="/favorite/{{this.id}}" method="POST" class="d-inline">
            <button type="submit" class="btn btn-warning">加到最愛</button>
          </form>
          {{/if}}
          {{#if this.isLiked}}
          <form action="/like/{{this.id}}?_method=DELETE" method="POST" class="d-inline ml-2">
            <button type="submit" class="btn btn-danger">Unlike</button>
          </form>
          {{else}}
          <form action="/like/{{this.id}}" method="POST" class="d-inline ml-2">
            <button type="submit" class="btn btn-dark">Like</button>
          </form>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>