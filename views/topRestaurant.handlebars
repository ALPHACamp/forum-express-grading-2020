<div class="container">
  <ul class="nav nav-tabs">
    <li class="nav-item">
      <a class="nav-link" href="#">首頁</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="/restaurants/feeds">最新動態</a>
    </li>
    <li class="nav-item">
      <a class="nav-link active" href="/restaurants/top">TOP10人氣餐廳</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="/users/top">美食達人</a>
    </li>
  </ul>
  <br />
  <br />
  <h1>人氣餐廳</h1>
  <hr />

  {{#each restaurants}}
  <div class="card mx-auto mb-3" style="width:750px;">
    <div class="row ">

      <div class="col-md-4">
        <img class="card-img-top" src="{{this.image}}" alt="" style="width:250px; height:200px;">
      </div>

      <div class="col-md-8 card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <span class="badge badge-secondary">追蹤數：{{this.FollowerCount}}</span>
        <p class="card-text">{{this.description}}</p>
        <a class="btn btn-primary" href="/restaurants/{{this.id}}">Show</a>

        {{#if this.isFavorited}}
        <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents;"><button
            type="submit" class="btn btn-danger mr-1">移除最愛</button>
        </form>
        {{else}}
        <form action="/favorite/{{this.id}}" method="POST" style="display: contents;"><button type="submit"
            class="btn btn-primary mr-1">加到最愛</button>
        </form>
        {{/if}}

      </div>

    </div>
  </div>
  {{/each}}

</div>