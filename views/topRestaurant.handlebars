<h1>TOP10 人氣餐廳</h1>
<hr />
<div class="row" style="text-align: center;">
  {{#each restaurants}}
    <div class="col-3">
      <a href="/users/{{this.id}}">
        <img class="" src="{{this.image}}" width="140px" height="140px">
      </a>
      <h2>{{this.name}}</h2>
      <span class="badge badge-secondary">追蹤人數：{{this.FavoritedCount}}</span>
      <p>
        {{#if this.isFavorited }}
          <form action="/following/{{this.id}}?_method=DELETE" method="POST" style="display: contents;"><button
              type="submit" class="btn btn-danger">移除最愛</button></form>
        {{else}}
          <form action="/following/{{this.id}}" method="POST" style="display: contents;"><button type="submit"
              class="btn btn-primary">加到最愛</button></form>
        {{/if}}
      </p>
    </div>
  {{/each}}
</div>