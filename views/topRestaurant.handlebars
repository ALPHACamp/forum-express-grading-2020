<h1>人氣餐廳</h1>
<hr />
<div class="container">

  {{#each restaurants}}
  <div class="card mb-3 mx-auto" style="max-width: 540px;">
    <div class="row no-gutters">
      <div class="col-md-4">
        <img src="{{this.image}}" class="card-img" alt="...">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <span class="badge badge-secondary">收藏數：{{this.favoriteCount}}</span>
          <p class="card-text">{{this.description}}</p>
          <div class="d-flex">
            <a class="btn btn-primary mr-1" href="/restaurants/{{this.id}}">Show</a>

            {{#if this.isFavorite}}
            <form action="/favorite/{{this.id}}?_method=DELETE" method="POST">
              <button class="btn btn-danger" type="submit">移除最愛</button>
            </form>
            {{else}}
            <form action="/favorite/{{this.id}}" method="POST">
              <button class="btn btn-primary" type="submit">新增最愛</button>
            </form>
            {{/if}}
          </div>

        </div>
      </div>
    </div>
  </div>
  {{/each}}

</div>