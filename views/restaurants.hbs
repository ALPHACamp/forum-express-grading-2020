<div class="row">
  {{#each restaurants}}
    <div class="col-lg-3 col-md-4 col-sm-6 col-8 mx-auto">
      <div class="card mb-4 shadow-sm">
        <img
          class="card-img-top"
          src="{{this.image}}"
          alt="Card image cap"
          width="286px"
          height="180px"
        />
        <div class="card-body">
          <p class="card-text">
            <a href="/restaurants/{{this.id}}">
              {{this.name}}
            </a>
          </p>
          <span class="badge badge-secondary">{{this.categoryName}}</span>
          <p class="card-text">{{this.description}}</p>
        </div>
      </div>
    </div>
  {{/each}}
</div>
