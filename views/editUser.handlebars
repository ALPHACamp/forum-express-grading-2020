<div class="container bg-white my-2 py-4">
  <form action="/users/{{user.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" aria-describedby="nameHelp" name="name" value="{{user.name}}" autofocus>
    </div>
    <div class="form-group">
      <label for="image">Avatar</label>
      <input type="file" class="form-control-file" id="image" name="image" aria-describedby="imageHelp" accept="image/*">
      <small id="imageHelp" class="form-text text-muted">only image file</small>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>