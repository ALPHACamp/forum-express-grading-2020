<form action="/users/{{user.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name" name="name" aria-describedby="username" value="{{user.name}}">
  </div>
  <div class="form-group">
    <label class="form-label" for="avatar">Image</label><br />
    <img class="img-responsive center-block" src="{{user.avatar}}" style="width: 250px;margin-bottom: 25px;">
    <input type="file" class="form-control-file" id="avatar" name="avatar" />
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>