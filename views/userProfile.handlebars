<div class="row">
  <div class="col-md-12">
    <h1>{{user.name}}</h1>
  </div>
  <div class="col-md-4">
    <img class="img-responsive center-block" src="{{user.image}}" style="width: 250px;margin-bottom: 25px;">
    <div class="well">
      <ul class="list-unstyled">
        <li><strong>User Name:</strong> {{user.name}}</li>
        <li><strong>User Email:</strong> {{user.email}}</li>
      </ul>
    </div>
  </div>
  <hr>
</div>
{{#ifCond id user.Id}}
<a href="/users/{{user.id}}/edit" class="btn btn-success">Edit</a>
{{/ifCond}}