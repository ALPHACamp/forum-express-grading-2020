<div class="row">
  <div class="col-md-12">
    <h1>{{restaurant.name}}</h1>
    <p>[{{restaurant.Category.name}}]</p>
  </div>
  <div class="col-md-4">
    <img class="img-responsive center-block rounded" src="{{restaurant.image}}" style="width: 250px;margin-bottom: 25px;">
    <div class="well">
      <ul class="list-unstyled">
        <li><strong>Opening Hour:</strong> {{restaurant.opening_hours}}</li>
        <li><strong>Tel:</strong> {{restaurant.tel}}</li>
        <li><strong>Address:</strong> {{restaurant.address}}</li>
      </ul>
    </div>
  </div>
  <div class="col-md-8">
    <p>{{restaurant.description}}</p>
    
    {{#if isFavorited }}
    <form action="/favorite/{{restaurant.id}}?_method=DELETE" method="POST" style="display: contents;"><button
        type="submit" class="btn btn-danger">移除最愛</button></form>
    {{else}}
    <form action="/favorite/{{restaurant.id}}" method="POST" style="display: contents;"><button type="submit"
        class="btn btn-primary">加到最愛</button></form>
    {{/if}}
  </div>
  <hr>
</div>

<form action="/comments" method="POST">
  <div class="form-group">
    <label for="text" class="mb-2">留下評論：</label>
    <textarea class="form-control" id="text" name="text" rows="3"></textarea>
  </div>
  <input type="hidden" name="restaurantId" value="{{restaurant.id}}" />
  <button type="submit" class="btn btn-primary mt-2">Submit</button>
</form>

<h5 class="mt-5">所有評論：</h5>
{{#each restaurant.Comments}}

{{#if ../user.isAdmin}}
<form action="/comments/{{this.id}}?_method=DELETE" method="POST" style="float: right;">
  <button type="submit" class="btn btn-danger">Delete</button>
</form>
{{/if}}

<blockquote class="blockquote mb-0">
  <a href="/users/{{this.User.id}}" class="text-primary text-decoration-none">{{this.User.name}}</a>
  <p>{{this.text}}</p>
  <footer class="blockquote-footer mt-2">{{moment this.createdAt}}</footer>
</blockquote>
<hr />
{{/each}}

<a href="javascript:history.back()" class="text-decoration-none">回上一頁</a>