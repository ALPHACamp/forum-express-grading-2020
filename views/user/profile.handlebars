<div class="card mb-3">
  <div class="row">
    <div class="col-auto">
      <img class="img-responsive center-block" src="{{profile.image}}" style="width: 300px;">
    </div>
    <div class="col-auto p-4">
      <h3>{{profile.name}}</h3>
      <p>{{profile.email}}</p>
      <p>{{commentedRestCount}} 已評論餐廳</p>
      {{#ifCond user.id profile.id}}
      <a href="/users/{{user.id}}/edit" class="btn btn-primary">edit</a>
      {{/ifCond}}
    </div>
  </div>
</div>

<div class="card">
  <div class="card-header"> {{commentedRestCount}} 已評論餐廳 </div>
  <div class="card-body">
    <div class="row row-cols-auto gy-3">
      {{#each commentedRestaurants}}
      <div class="col">
        <a href="/restaurants/{{this.RestaurantId}}">
          <img class="img-responsive center-block" src="{{this.Restaurant.image}}" style="width: 68px;">
        </a>
      </div>
      {{/each}}
    </div>
  </div>
</div>