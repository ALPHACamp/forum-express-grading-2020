<div class="card mb-3">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src={{user.image}} class="card-img" id="userImage" name="image" alt="...">
    </div>

    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{user.name}}</h5>
        <p class="card-text"><small class="text-muted">{{user.email}}</small></p>

        <form action="/users/{{userId}}/edit?_method=PUT" method="POST">
          <button class="btn btn-primary">edit</button>
        </form>
      </div>
    </div>
  </div>
</div>