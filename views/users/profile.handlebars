<div class="card mb-3">
  <div class="row no-gutters">
    <div class="col-md-4">
      {{#if user.image}}
        <img src="{{ user.image }}" width="300px" height="300px" />
      {{else}}
        <img src="https://via.placeholder.com/300" width="300px"
          height="300px" />
      {{/if}}
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{ user.name }}</h5>
        <p class="card-text">
          {{ user.email }}
        </p>
        <a href="/users/{{ user.id }}/edit">
          <button type="submit" class="btn btn-primary">edit</button>
        </a>
        <ul class="list-unstyled list-inline">
          <li><strong>{{ count }}</strong> 已評論餐廳
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="col-md-8">
  <div class="card">
    <div class="card-header">
      <strong>{{ count }}</strong> 已評論餐廳
    </div>
    <div class="card-body">
      {{#each comment}}
        <a href="/restaurants/{{ this.Restaurant.id }}">
          <img src={{ this.Restaurant.image }} width="60" height="60"
            class="avatar" />
        </a>
      {{/each}}
    </div>
  </div>
</div>
</div>
