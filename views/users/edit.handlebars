<form action="/users/{{user.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" name="name" id="name" placeholder="Enter name" value="{{user.name}}">
  </div>

    <div class="form-group">
      <p>Image</p>
      <div class=""><img src="{{user.image}}" alt="user" class="rounded-circle" width="100" id="imageSubmitCheck"/></div>
      <input type="file" accept="image/png,image/jpeg,image/jpg" class="form-control-file" id="image" name="image">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <a href="./" type="button" class="btn btn-primary">Back</a>

  </form>

<script type="text/javascript">
  image.onchange = evt => {
    const [file] = image.files
    if (file) {
      imageSubmitCheck.src = URL.createObjectURL(file)
    }
  }
</script>