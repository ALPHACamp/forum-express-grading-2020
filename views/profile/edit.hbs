<div class="row mt-3">
  <div class="col-md-10 mx-auto">
    <h3>Edit Profile</h3>
    <div class="shadow-sm p-3 mb-5 bg-white rounded">
      <form action="/users/{{ user.id }}?_method=PUT" method="POST" enctype="multipart/form-data"
        class="needs-validation" novalidate>
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" name="name" id="name" required value="{{ user.name }}">
        </div>
        <div class="form-group">
          <label for="image">Image</label>
          <input type="file" class="d-block" name="image" id="image">
        </div>
        <button type="submit" class="btn btn-success">submit</button>
      </form>
    </div>
  </div>
</div>