<div class="row mt-3">
  <div class="col-lg-4 col-md-6">
    <img class="img-responsive center-block" src="{{profile.image}}" style="width: 250px;margin-bottom: 25px;">
  </div>
  <div class="col-lg-8 col-md-6">
    <ul class="list-unstyled">
      <li><strong>Name:</strong> {{profile.name}}</li>
      <li><strong>Email:</strong> {{profile.email}}</li>
    </ul>
    {{#ifCond profile.id user.id}}
    <a href='/users/{{profile.id}}/edit'>
      <button type="button" class="btn btn-primary">Edit</button>
    </a>
    {{/ifCond}}
  </div>
</div>
<div class="card">
  <h5 class="card-header"><span class="badge badge-secondary badge-pill">{{comments.length}} </span>已評論餐廳</h5>
  <div class="row">

    {{#each comments}}
    <div class="card-body" style="width:150px">
      <img class="card-img-top" src="{{this.restaurantImage}}" alt="Card image">
      <a class="card-title" href="/restaurants/{{this.RestaurantId}}">{{this.restaurantName}}</a>
      <p class="card-text">{{this.text}}</p>
    </div>
    {{/each}}
  </div>

</div>