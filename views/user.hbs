<div class="card mb-3" style="max-width: 100%;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{User.image}}" class="img-fluid rounded-start" alt="userPic">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{User.name}}</h5>
        <p class="card-text">{{User.email}}</p>
        {{#ifCond user.id User.id}} {{!//user是res.locals(登入者), User才是頁面擁有者}}
        <a href="/users/{{../User.id}}/edit" class="btn btn-primary">Edit</a>
        {{/ifCond}}
      </div>
    </div>
  </div>
</div>