<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img class="img-responsive center-block" src="{{displayUser.image}}" alt="no-photo" width="300px" height="300px">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{displayUser.name}}</h5>
        <h6 class="card-subtitle mb-2 text-muted">{{displayUser.email}}</h6>
        {{#if (equal displayUser.id user.id)}}
        <a href="/users/{{displayUser.id}}/edit" class="btn btn-primary mt-3">Edit</a>
        {{/if}}
      </div>
    </div>
    <hr>
  </div>
</div>