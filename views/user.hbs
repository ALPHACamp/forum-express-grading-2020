<div class="card mb-3 mt-2" style="max-width: 100%;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{User.image}}" class="img-fluid rounded-start" alt="userPic">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{User.name}}</h5>
        <p class="card-text">{{User.email}}</p>
        <p class="card-text">已評論餐廳：{{totalComments}}</p>
        {{#ifCond user.id User.id}} {{!//user是res.locals(登入者), User才是頁面擁有者}}
        <a href="/users/{{../User.id}}/edit" class="btn btn-primary">Edit</a>
        {{/ifCond}}
      </div>
    </div>
  </div>
</div>

<div class="col-md-12 p-0" style="max-width: 100%;">
  <div class="card h-100" style="max-width: 100%;">
    <div class="card-footer">
      <p class="mb-0"><b>{{totalComments}} 間已評論餐廳</b></p>
    </div>
    <div class="card-body d-flex" style="overflow: scroll">
      {{#each comments}}
      <div class="col-md-2">
        <a href="/restaurants/{{this.RestaurantId}}">
          <img src="{{this.Restaurant.image}}" class="card-img-top" alt="餐廳照片">
        </a>
      </div>
      {{/each}}
    </div>
  </div>
</div>