<div class="row">
  <div class="col-4">
    <img class="img-responsive center-block" src="{{user.image}}"
      style="width: 350px;margin-bottom: 25px;border-radius:50%;">
  </div>
  <div class="col-8">
    <h1>{{user.name}}</h1>
    <p>{{user.email}}</p>
    <p>{{commentedRestaurantAmount}}已評論餐廳</p>
    <a href="/users/{{user.id}}/edit" class="btn btn-primary">
      Edit
    </a>
  </div>
</div>

<div class="container">
  <div class="mb-2" style="border-width:1px;border-style:solid;border-color:black">
    {{commentedRestaurantAmount}}已評論餐廳
  </div>
  <div style="border-width:1px;border-style:solid;border-color:black">
    {{#each user.Comments}}
    <div class="d-inline-flex mx-1">
      <a href="/restaurants/{{this.Restaurant.id}}"><img src="{{this.Restaurant.image}}" style="width: 100px;"
          class="img-thumbnail"></a>
    </div>
    {{/each}}
  </div>
</div>