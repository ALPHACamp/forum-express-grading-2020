      <a href="/restaurants/{{this.Restaurant.id}}">
        <img style="width:150px" src="{{this.Restaurant.image}}">
      </a>
      <div>{{this.Restaurant.name}}</div>
    </div>
    {{/each}}
  </div>
</div>
