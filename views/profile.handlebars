<div class="card mb-3" style="min-width: 800px; min-height:350px">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{user.image}}" alt="user-image" width="350px" height="350px">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{user.name}}</h5>
        <p class="card-text">{{user.email}}</p>
        <a href="/users/{{user.id}}/edit" class="btn btn-primary">edit</a>
      </div>
    </div>
  </div>
</div>