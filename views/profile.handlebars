<div class="row">
    <div class="col">
        <div class="card" style="flex-direction: row;">
            {{#if userData.image}}
            <div class="profile-img" style="width: 25%; height: 25%;">
                <img src="{{userData.image}}" alt="Profile-image" style="object-fit: cover; width: 100%; height: 100%;">
            </div>
            {{else}}
            <div class="profile-img" style="width: 25%; height: 25%;">
                <img src="https://lh3.googleusercontent.com/proxy/WWaG9LdwIqprvryEj0wjyEVPNFm0RYvDP_NF7F63CT0Juec8U-ngXCSqnFOuh74LVyiesvXQEI7lWN7z3afRh1ECqlSYsYM-jNpdRRoLxgMAbinGJARAuL0"
                    alt="Profile-image" style="object-fit: cover; width: 100%; height: 100%;">
            </div>
            {{/if}}
            <div class="card-body" style="width: 75%;">
                <h5 class="card-title">{{userData.name}}</h5>
                <p class="card-text">{{userData.email}}</p>
                <p class="card-text"><strong>{{commentedRestaurants.length}}</strong> 已評論餐廳</p>
                <p class="card-text"><strong>{{favoritedRestaurants.length}}</strong> 收藏的餐廳</p>
                <p class="card-text"><strong>{{followings.length}}</strong> followings (追蹤者)</p>
                <p class="card-text"><strong>{{followers.length}}</strong> followers (追隨者)</p>
                {{#ifCond user.id userData.id}}
                <a href="/users/{{userData.id}}/edit" class="btn btn-primary">edit</a>
                {{/ifCond}}
            </div>
        </div>
        <div class="card mt-3">
            <div class=" card-header">{{followings.length}}followings (追蹤者)</div>
            <div class="row p-3">
                {{#each followings}}
                <div class="col-md-2 mb-1">
                    <a href="/restaurants/{{this.id}}">
                        <img src="{{this.image}}" alt="" class="img-fluid">
                        <p>{{this.name}}</p>
                    </a>
                </div>
                {{/each}}
            </div>
        </div>
        <div class="card mt-3">
            <div class=" card-header">{{followers.length}}followers (追隨者)</div>
            <div class="row p-3">
                {{#each followers}}
                <div class="col-md-2 mb-1">
                    <a href="/restaurants/{{this.id}}">
                        <img src="{{this.image}}" alt="" class="img-fluid">
                        <p>{{this.name}}</p>
                    </a>
                </div>
                {{/each}}
            </div>
        </div>
        <div class="card mt-3">
            <div class=" card-header">{{commentedRestaurants.length}} 已評論餐廳</div>
            <div class="row p-3">
                {{#each commentedRestaurants}}
                <div class="col-md-2 mb-1">
                    <a href="/restaurants/{{this.id}}">
                        <img src="{{this.image}}" alt="" class="img-fluid">
                        <p>{{this.name}}</p>
                    </a>
                </div>
                {{/each}}
            </div>
        </div>
        <div class="card mt-3">
            <div class=" card-header">{{favoritedRestaurants.length}}收藏的餐廳</div>
            <div class="row p-3">
                {{#each favoritedRestaurants}}
                <div class="col-md-2 mb-1">
                    <a href="/restaurants/{{this.id}}">
                        <img src="{{this.image}}" alt="" class="img-fluid">
                        <p>{{this.name}}</p>
                    </a>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>