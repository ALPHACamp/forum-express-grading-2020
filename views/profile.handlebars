<div class="card mb-3" style="min-width: 800px; min-height:350px">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{user.image}}" alt="user-image" width="350px" height="350px">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{user.name}}</h5>
        <p class="card-text">{{user.email}}</p>
        <p class="card-text">{{restAmount}} 已評論餐廳</p>
        <a href="/users/{{user.id}}/edit" class="btn btn-primary">edit</a>
      </div>
    </div>
  </div>
</div>

<div class="card">
  <div class="card-header">
    {{restAmount}} 已評論餐廳
  </div>
  <div class="card-body">
    {{#each comments}}
    <a href="/restaurants/{{this.Restaurant.id}}">
      <img src="{{this.Restaurant.image}}" alt="restaurant-link" width="200px" height="200px">
    </a>
    {{/each}}
  </div>
</div>