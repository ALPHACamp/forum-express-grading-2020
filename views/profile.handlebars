<div class="card mb-3">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img
        src="{{#if user.image}}{{user.image}}{{else}}https://www.kindpng.com/picc/m/22-223965_no-profile-picture-icon-circle-member-icon-png.png{{/if}}"
        class="card-img" alt="avatar">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{user.name}}</h5>
        <p class="card-text">{{user.email}}</p>
        <a class="btn btn-primary" href="/users/{{user.id}}/edit" role="button">Edit</a>
      </div>
    </div>
  </div>
</div>