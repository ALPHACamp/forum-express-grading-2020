<div class="container">
  <div class="row">
    <div class="col">
      <img src="{{ user.image }}" class="rounded-circle" alt="" style="max-width: 500px;">
    </div>
    <div class="col">
      <h6>{{ user.name }}</h6>
      <p>{{ user.email }}</p>
      <form action="/users/{{ user.id }}/edit">
        <button class="btn btn-primary">edit</button>
      </form>
    </div>
  </div>
</div>

<div class="card mt-5">
  <h6 class="card-header">已評論 {{commentCounts}} 餐廳</h6>
  <div class="card-body">
    {{#each comments}}
    <a href="/restaurants/{{ this.restaurantId }}" style="display: inline-block;">
      <img src="{{ this.restaurantImage }}" class="img m-2" style="width: 3rem; height: 3rem;">
    </a>
    {{/each}}
  </div>
</div>