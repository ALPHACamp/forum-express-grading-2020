<div class="d-flex justify-content-start align-items-center w-50">
  <div class="mr-3 pr-3">
    <img src="{{user.image}}" width="300" height="300" border="0" class="rounded-circle">
  </div>
  <div>
    <h3>{{user.name}}</h3>
    <p>{{user.email}}</p>
    <p>{{user.commentsCount}} 已評論餐廳</p>
    <a class="btn btn-primary" href="/users/{{user.id}}/edit">
      Edit
    </a>
  </div>
</div>
<div class="card border-dark bg-light mt-3 w-100 ">
  <div class="card-header">{{user.commentsCount}} 已評論餐廳</div>
  <div class="card-body d-flex flex-row align-content-between flex-wrap">
    {{#each user.commentedRestaurant}}
      <a class="pr-3 pb-2" href="/restaurants/{{this.RestaurantId}}">
        <img width="100" height="100" src="{{this.RestaurantImage}}" alt="" srcset="">
      </a>
    {{/each}}
  </div>
</div>