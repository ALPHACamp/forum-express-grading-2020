<div class="container d-flex justify-content-center my-5 bg-white border rounded">
  <div class="row my-3" style="width: 90%">
    <div class="col-md-3 d-flex justify-content-center align-items-center">
      {{#if user.image}}
        <img src="{{user.image}}" alt="Card image cap" style="width: 150px; height: 150px; border-radius: 50%">
      {{else}}
        <i class="fas fa-user-circle fa-4x"></i>
      {{/if}}
    </div>
    <div class="col-md-9">
      <div class="">
        <h4 class="">{{user.name}}</h4>
        <p class="">{{user.email}}</p>
        {{#ifCond thisUser.id user.id}}
          <a href="/users/{{thisUser.id}}/edit" class="btn btn-outline-primary">Edit</a>
        {{/ifCond}}
      </div>
    </div>
  </div>
</div>
