<div class="row">
  <div style="display: flex;">
    <img class="img-responsive center-block" src="{{user.image}}" style="width: 250px;margin-bottom: 25px;">
    <div class="ml-5">
      <div class="col-md-12">
        <h1>{{user.name}}</h1>
      </div>
      <div class="col-md-4">
        <div class="email">{{user.email}}</div>
      </div>
      <div class="col-12">
        <div class="info mb-1">{{commentCounts}} 已評論餐廳</div>
        <div class="info mb-1">{{favoritedRestaurants}} 收藏的餐廳</div>
        <div class="info mb-1">{{followingsCounts}} followings</div>
        <div class="info mb-1">{{followersCounts}} followers</div>

      </div>
      {{#if isUser}}
      <div class="col-md-8">
        <a href="/users/{{user.id}}/edit">edit</a>
      </div>
      {{else}}
      <form action="/following/{{this.dataValues.id}}" method="POST" style="display: contents;"><button type="submit"
          class="btn btn-primary ml-3">追蹤</button></form>
      {{/if}}
    </div>
  </div>
  <hr>
</div>
<hr>
<br />
<div class="row">
  <div class="row col-5 px-0 mx-2 mb-2" style="background-color: rgba(235, 228, 228, 0.2)">
    <div class="col-12 mb-2 "
      style="border-bottom: 1px solid gray; background-color: rgba(190, 190, 190,0.5); height:50px;display:flex; align-items:center">
      已評論餐廳
    </div>
    <div class="col-12" style=" display: flex">
      {{#each user.Comments}}
      <div class="comment-container mx-2">
        <a href="/restaurants/{{this.Restaurant.id}}">
          <img style="width:80px" src="{{this.Restaurant.image}}">
        </a>
      </div>
      {{/each}}
    </div>
  </div>
  <div class="row col-5 px-0 mx-2 mb-2" style="background-color: rgba(235, 228, 228, 0.2)">
    <div class="col-12 mb-2 "
      style="border-bottom: 1px solid gray; background-color: rgba(190, 190, 190,0.5); height:50px;display:flex; align-items:center">
      收藏的餐廳
    </div>
    <div class="col-12" style=" display: flex">
      {{#each user.FavoritedRestaurants}}
      <div class="comment-container mx-2">
        <a href="/restaurants/{{this.id}}">
          <img style="width:80px" src="{{this.image}}">
        </a>
      </div>
      {{/each}}
    </div>
  </div>
  <div class="row  col-5 px-0 mx-2 mb-2" style="background-color: rgba(235, 228, 228, 0.2)">
    <div class="col-12 mb-2 "
      style="border-bottom: 1px solid gray; background-color: rgba(190, 190, 190,0.5); height:50px;display:flex; align-items:center">
      followings(追蹤者)
    </div>
    <div class="col-12" style=" display: flex">
      {{#each user.Followings}}
      <div class="comment-container mx-2">
        <a href="/restaurants/{{this.id}}">
          <img style="width:80px" src="{{this.image}}">
        </a>
        <div>{{this.name}}</div>
      </div>
      {{/each}}
    </div>
  </div>
  <div class="row  col-5 px-0 mx-2 mb-2" style="background-color: rgba(235, 228, 228, 0.2)">
    <div class="col-12 mb-2 "
      style="border-bottom: 1px solid gray; background-color: rgba(190, 190, 190,0.5); height:50px;display:flex; align-items:center">
      followers(追隨者)
    </div>
    <div class="col-12" style=" display: flex">
      {{#each user.Followers}}
      <div class="comment-container mx-2">
        <a href="/restaurants/{{this.id}}">
          <img style="width:80px" src="{{this.image}}">
        </a>
        <div>{{this.name}}</div>
      </div>
      {{/each}}
    </div>
  </div>
</div>

<br />
