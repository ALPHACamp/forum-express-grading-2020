<div class="row">
  <div class="card-body shadow d-flex">
    <div class="col-md-4">
      <img class="img-responsive center-block" src="{{user.image}}" style="width: 100%;">
    </div>

    <div class="col-md-8">
      <h1>{{user.name}}</h1>
      <p>{{user.email}}</p>
      {{#ifCond userId currentUserId }}
      <a href='/users/{{user.id}}/edit'>
        <button type="button" class="btn btn-primary">Edit</button>
      </a>
      {{/ifCond}}

    </div>
  </div>
</div>