<h1>人氣餐廳</h1>
<hr />
<div class="row">
  <div class="col-md-8 mx-auto">
    <div class="card">
      <div class="card-header">
        人氣餐廳
      </div>
      <div class="card-body">
        {{#each restaurants}}
        <div class="row">
          <div class="col-md-4">
            <a href="/restaurants/{{this.id}}"><img src="{{this.image}}" style="width: 150px"></a>
          </div>
          <div class="col-md-8">
            <h4>
              <a href="/restaurants/{{this.id}}">{{this.name}} </a>
            </h4>
            <small>收藏數：{{this.FavoritedCount}}</small>
            <p>{{this.description}}</p>
            <div class="d-flex">
              <a href="/restaurants/{{this.id}}" class="btn btn-primary mr-3">Show</a>
              {{#if this.isFavorited}}
              <form action="/favorite/{{this.id}}?_method=DELETE" method="POST"><button type="submit"
                  class="btn btn-danger">移除最愛</button></form>
              {{else}}
              <form action="/favorite/{{this.id}}" method="POST"><button type="submit"
                  class="btn btn-primary">加到最愛</button>
              </form>
              {{/if}}
            </div>
            <hr>
            <hr>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>