<div class="card-body shadow">
  <div class="row d-flex justify-content-around align-items-center">
    <div class="col-lg-4" >
      <img class="rounded-circle"src="{{noImage user.image}}" alt="" style="width: 300px; height:300px">
    </div>
    <div calss="col-lg-8">
      <h1>{{user.name}}</h1>
      <p>{{user.email}}</p>
      <p class=" card-title mb-3">評論過{{totalComments}}間餐廳</p>
      <a href='/users/{{user.id}}/edit'>
        <button type="button" class="btn btn-info">編輯</button>
      </a>
      <div class="mt-3">
        <a href="/">回上一頁</a>
      </div>
    </div>
  </div>
  <div class="mt-5 card">
    <div class="card-header">評論過{{totalComments}}間餐廳</div>
    <div class="card-body row">
      {{#each user.Comments}}
        <div class="col-lg-2 mb-3">
          <p class="text-center">{{this.Restaurant.name}}</p>
          <a href="/restaurants/{{this.RestaurantId}}">
            <img class="img-fluid" src="{{this.Restaurant.image}}">
          </a>
        </div>
      {{/each}}
    </div>
  </div>
</div>

