<div class="container bg-white">
  <div class="row py-4">
    <div class="col-md-4">
      <img src="{{user.image}}" alt="" class="img-responsive center-block" style="width: 250px;">
    </div>
    <div class="col-md-8">
      <h3>{{user.name}}</h3>
      <p>{{user.email}}</p>
      <p><strong>{{count}}</strong> 已評論餐廳</p>
      <a href="/users/{{user.id}}/edit" class="btn btn-primary">edit</a>
    </div>
  </div>
</div>

<div class="card mt-4">
  <div class="card-header">
    <p class="m-0"><strong>{{count}}</strong> 已評論餐廳</p>
  </div>
  <div class="card-body d-flex">
    {{#each comments.rows}}
    <div class="media">
      <a href="/restaurants/{{this.Restaurant.id}}"><img src="{{this.Restaurant.image}}" class="mr-3" alt="..." style="width: 64px;"></a>
    </div>
    {{/each}}
  </div>
</div>