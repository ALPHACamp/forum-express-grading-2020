<div class="card">
  <div class="row">
    <div class="col-4">
      <img class="img-responsive center-block" src="{{viewUser.image}}" style="width: 250px;margin-bottom: 25px;">
    </div>
    <div class="col-8">
      <h1>{{viewUser.name}}</h1>
      <p>{{viewUser.email}}</p>
      <p>{{count}} 家已評論餐廳</p>
      {{#ifCond viewUser.id userID}}
      <form action="/users/{{viewUser.id}}/edit" method="GET" class="my-5">
        <button type="submit" class="btn btn-primary">Edit</button>
      </form>
      {{/ifCond}}
    </div>
  </div>
</div>


<div class="card my-3">
  <h5 class="card-header">{{count}} 家已評論餐廳</h5>
  <div class="card-body">
    <div class="row">
      {{#each viewUser.Comments}}
      <a href="/restaurants/{{this.Restaurant.id}}" class="mx-3">
        <img class="img-responsive center-block" src="{{this.Restaurant.image}}"
          style="width: 100px;margin-bottom: 25px;">
      </a>
      {{/each}}
    </div>
  </div>
</div>