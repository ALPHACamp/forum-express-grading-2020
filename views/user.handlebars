<div class="row p-3 m-2" style="background-color: white; border: 1px solid 	#D0D0D0">
  <div class="col-md-4">
    <img src="{{profile.image}}" height="240">
  </div>
  <div class="col-md-8">
    <ul class="list-unstyled">
      <li>{{profile.name}}</li>
      <li>{{profile.email}}</li>
      <li><strong>{{profile.Comments.length}}</strong> 已評論餐廳</li>
      <li><strong>{{profile.FavoritedRestaurants.length}}</strong> 收藏的餐廳</li>
      <li><strong>{{profile.Followings.length}}</strong> followings (追蹤者)</li>
      <li><strong>{{profile.Followers.length}}</strong> followers (追隨者)</li>
      <li>
        {{#ifCond user.id profile.id}}
        <a class="btn btn-primary mt-2" href="/users/{{profile.id}}/edit">edit</a>
        {{/ifCond}}
      </li>
    </ul>
  </div>

</div>

<div class="row">
  <div class="col-md-4">
    <div class="col-md-12 mt-3">
      <div class="card">
        <div class="card-header">
          <strong>{{profile.Followings.length}}</strong> followings (追蹤者)
        </div>

        <div class="card-body">
          {{#each profile.Followings}}
          <a href="/users/{{this.id}}"><img src="{{this.image}}" width="50" height="50" class="m-1"></a>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <div class="col-md-12 mt-3">
      <div class="card">
        <div class="card-header">
          <strong>{{profile.Comments.length}}</strong> 已評論餐廳
        </div>

        <div class="card-body">
          {{#each profile.Comments}}
          <a href="/restaurants/{{this.RestaurantId}}"><img src="{{this.Restaurant.image}}" width="50" height="50"
              class="m-1"></a>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class=" col-md-4">
    <div class="col-md-12 mt-3">
      <div class="card">
        <div class="card-header">
          <strong>{{profile.Followers.length}}</strong> followers (追隨者)
        </div>

        <div class="card-body">
          {{#each profile.Followers}}
          <a href="/users/{{this.id}}"><img src="{{this.image}}" width="50" height="50" class="m-1"></a>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <div class="col-md-12 mt-3">
      <div class="card">
        <div class="card-header">
          <strong>{{profile.FavoritedRestaurants.length}}</strong> 收藏的餐廳
        </div>

        <div class="card-body">
          {{#each profile.FavoritedRestaurants}}
          <a href="/restaurants/{{this.id}}"><img src="{{this.image}}" width="50" height="50" class="m-1"></a>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>