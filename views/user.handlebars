<div class="row">
  <div class="col-md-4">
    <img class="img-responsive center-block" src="{{user.image}}" style="width: 250px;margin-bottom: 25px;">
  </div>
  <div class="col-md-8">
    <h1>{{user.name}}</h1>
    <p>{{user.email}}</p>
    <a href="/users/{{user.id}}/edit"><button type="button" class="btn btn-primary">
        Edit
      </button>
    </a>
  </div>
</div>

<div class="card">
  <div class="card-header">{{user.Comments.length}} 已評論餐廳
  </div>
  <div class="col-3 m-2 d-flex flex-row">
    {{#each user.Comments}}
    <div class="p-2">
      <a href="/restaurants/{{this.RestaurantId}}"><img class="img-fluid" src="{{this.Restaurant.image}}" alt=""></a>
    </div>
    {{/each}}
  </div>
</div>