<form class="form-editUser" action="/users/{{viewUser.id}}?_method=PUT" method="POST" style="width: 100%;"
  enctype="multipart/form-data">
  <div class="text-center mb-4">
    <h1 class="h3 mb-3 font-weight-normal">Edit user profile</h1>
  </div>
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" name="name" id="name" placeholder="Enter name" value="{{viewUser.name}}"
      maxlength="10" required>
  </div>
  <div class="form-group">
    <label for="image">Image</label>
    <input type="file" class="form-control-file" id="image" name="image">
  </div>
  <br />
  <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
</form>