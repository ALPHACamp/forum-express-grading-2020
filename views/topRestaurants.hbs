<h1>TOP 10 人氣餐廳</h1>
<hr />
{{#each restaurants}}
<div class="row">
  <div class="card shadow-sm" style="width: 80%; margin:auto">
    <div class="row">
      <div class="col-md-4">
        <img src="{{this.image}}" alt="Card image cap" width="100%">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h4>{{this.name}}</h4>
          <span class="badge badge-secondary">收藏數：{{this.favoriteCount}}</span>
          <span class="badge badge-secondary">{{this.categoryName}}</span>
          <p class="card-text">{{this.description}}</p>
          <a href="/restaurants/{{this.id}}" class="btn btn-primary">
            Detail
          </a>
          {{#if this.isFavorite }}
          <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents;"><button
              type="submit" class="btn btn-danger">移除最愛</button></form>
          {{else}}
          <form action="/favorite/{{this.id}}" method="POST" style="display: contents;"><button type="submit"
              class="btn btn-primary">加到最愛</button></form>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
<br />
{{/each}}