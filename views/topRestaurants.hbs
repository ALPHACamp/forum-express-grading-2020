<h1>人氣餐廳</h1>
<hr />
<ul class="nav nav-pills flex justify-content-center align-items-center">
  <li class="nav-item">
    <a class="nav-link {{#ifCond '' categoryId}}active{{/ifCond}}" href="?categoryId=">全部</a>
  </li>
  {{#each categories}}
  <li class="nav-item">
    <a class="nav-link {{#ifCond this.id ../categoryId}}active{{/ifCond}}" href="?categoryId={{this.id}}">{{this.name}}</a>
  </li>
  {{/each}}
</ul>
<br />
<div class="row flex justify-content-center align-items-center">
  {{#if restaurants}}
  {{#each restaurants}}
  <div class="row col-8 shadow p-3 mb-5 bg-white rounded" width="128px">
    <div class=" col-md-5 p-0">
      <img class="content-img mb-3" src="{{#if this.image}}{{this.image}}{{else}}https://loremflickr.com/cache/resized/defaultImage.small_320_240_nofilter.jpg{{/if}}"
        alt="Card image cap" width="100%">
    </div>
    <div class="content-body col-md-6 ">
      <p class="content-text">
        <a href="/restaurants/{{this.id}}">
          {{this.name}}
        </a>
      </p>
      <span class="badge badge-secondary">{{this.categoryName}}</span>
      <span class="badge badge-secondary">收藏數：{{this.FavoriteCount}}</span>
      <span class="badge badge-secondary">點讚數：{{this.LikeCount}}</span>
      <p class="card-text">{{this.description}}</p>
      {{#if this.isFavorited }}
      <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display:contents;"><button type="submit"
          class="btn btn-danger">移除最愛</button></form>
      {{else}}
      <form action="/favorite/{{this.id}}" method="POST" style="display:contents;"><button type="submit" class="btn btn-primary">加到最愛</button></form>
      {{/if}}
      {{#if this.isLiked }}
      <form action="/like/{{this.id}}?_method=DELETE" method="POST" style="display:contents;"><button type="submit"
          class="btn btn-danger">Unlike</button></form>
      {{else}}
      <form action="/like/{{this.id}}" method="POST" style="display:contents;"><button type="submit" class="btn btn-primary">Like</button></form>
      {{/if}}
    </div>
  </div>
  {{/each}}
  {{else}}
  <h4 class="mt-3">目前尚未有此種類餐廳</h4>
  {{/if}}
</div>
<br />
<br />